{
  "kind": "singleType",
  "collectionName": "contact_uses",
  "info": {
    "singularName": "contact-us",
    "pluralName": "contact-uses",
    "displayName": "تواصل معنا",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "Address": {
      "type": "component",
      "repeatable": false,
      "component": "custom-fields.address",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "phone": {
      "type": "string",
      "required": true,
      "regex": "^(\\+20|0)1[0125]\\d{8}$",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "email": {
      "type": "email",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "socialMediaAccounts": {
      "displayName": "Social Media Account",
      "type": "component",
      "repeatable": true,
      "component": "custom-fields.social-media-account",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
